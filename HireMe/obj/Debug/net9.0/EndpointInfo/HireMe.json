    "/Answers": {
      "post": {
        "tags": [
          "Answers"
        ],
        "summary": "Adds a new answer to a question by the employer.",
        "description": "This endpoint allows employers to answer questions on their job postings.\r\nOnly the employer who owns the job can answer questions.\r\nThe employer ID is automatically extracted from the authenticated user's token.\r\nQuestions can only be answered once.",
        "requestBody": {
          "description": "The answer details including question ID and answer text.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddAnswerRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AddAnswerRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AddAnswerRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Answer added successfully."
          },
          "400": {
            "description": "Invalid request or business rule violation (e.g., QuestionNotFound, JobNotFound, UnauthorizedAnswerCreation, QuestionAlreadyAnswered)."
          },
          "401": {
            "description": "User is not authenticated."
          }
        }
      }
    },
    "/Answers/{answerId}": {
      "put": {
        "tags": [
          "Answers"
        ],
        "summary": "Updates an existing answer.",
        "description": "Only the employer who created the answer can update it.\r\nThe answer must exist and belong to the authenticated employer.",
        "parameters": [
          {
            "name": "answerId",
            "in": "path",
            "description": "The ID of the answer to update.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "description": "The updated answer text.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateAnswerRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateAnswerRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateAnswerRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "204": {
            "description": "Answer updated successfully."
          },
          "400": {
            "description": "Invalid request or business rule violation (e.g., AnswerNotFound, UnauthorizedAnswerUpdate)."
          },
          "401": {
            "description": "User is not authenticated."
          }
        }
      },
      "delete": {
        "tags": [
          "Answers"
        ],
        "summary": "Deletes an answer.",
        "description": "Only the employer who created the answer can delete it.\r\nThe answer must exist and belong to the authenticated employer.\r\nThis is a soft delete operation, maintaining data integrity.",
        "parameters": [
          {
            "name": "answerId",
            "in": "path",
            "description": "The ID of the answer to delete.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "204": {
            "description": "Answer deleted successfully."
          },
          "400": {
            "description": "Invalid request or business rule violation (e.g., AnswerNotFound, UnauthorizedAnswerDelete)."
          },
          "401": {
            "description": "User is not authenticated."
          }
        }
      }
    },
