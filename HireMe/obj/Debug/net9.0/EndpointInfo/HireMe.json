    "/Questions": {
      "post": {
        "tags": [
          "Questions"
        ],
        "summary": "Adds a new question to a job from a worker.",
        "description": "This endpoint allows workers to ask questions about a specific job posting.\r\nThe worker ID is automatically extracted from the authenticated user's token.\r\nWorkers can ask multiple questions on the same job.",
        "requestBody": {
          "description": "The question details including job ID and question content.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddQuestionRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AddQuestionRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AddQuestionRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Question added successfully."
          },
          "400": {
            "description": "Invalid request or business rule violation (e.g., JobNotFound, JobNotAcceptingQuestions)."
          },
          "401": {
            "description": "User is not authenticated."
          },
          "403": {
            "description": "User is not authorized (not a worker)."
          }
        }
      }
    },
    "/Questions/{questionId}": {
      "put": {
        "tags": [
          "Questions"
        ],
        "summary": "Updates an existing question content.",
        "description": "Only the worker who created the question can update it.\r\nThe question must exist and belong to the authenticated worker.\r\nCannot update questions that have already been answered by the employer.",
        "parameters": [
          {
            "name": "questionId",
            "in": "path",
            "description": "The ID of the question to update.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "description": "The updated question content.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateQuestionRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateQuestionRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateQuestionRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "204": {
            "description": "Question updated successfully."
          },
          "400": {
            "description": "Invalid request or business rule violation (e.g., QuestionNotFound, UnauthorizedQuestionUpdate, QuestionAlreadyAnswered)."
          },
          "401": {
            "description": "User is not authenticated."
          },
          "403": {
            "description": "User is not authorized (not a worker)."
          }
        }
      },
      "delete": {
        "tags": [
          "Questions"
        ],
        "summary": "Deletes a question.",
        "description": "Only the worker who created the question can delete it.\r\nThe question must exist and belong to the authenticated worker.\r\nThis is a soft delete operation, maintaining data integrity.\r\nCannot delete questions that have already been answered by the employer.",
        "parameters": [
          {
            "name": "questionId",
            "in": "path",
            "description": "The ID of the question to delete.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "204": {
            "description": "Question deleted successfully."
          },
          "400": {
            "description": "Invalid request or business rule violation (e.g., QuestionNotFound, UnauthorizedQuestionUpdate, QuestionAlreadyAnswered)."
          },
          "401": {
            "description": "User is not authenticated."
          },
          "403": {
            "description": "User is not authorized (not a worker)."
          }
        }
      }
    },
    "/Questions/{jobId}": {
      "get": {
        "tags": [
          "Questions"
        ],
        "summary": "Retrieves all questions for a specific job.",
        "description": "This endpoint is publicly accessible (no authentication required).\r\nReturns all questions asked by workers on the specified job along with employer answers if provided.\r\nUseful for workers to see what questions have been asked before submitting their own.\r\nOnly returns non-deleted questions.",
        "parameters": [
          {
            "name": "jobId",
            "in": "path",
            "description": "The ID of the job to get questions for.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Questions retrieved successfully. Returns a list of questions with answers."
          },
          "400": {
            "description": "Invalid request or JobNotFound."
          }
        }
      }
    }
