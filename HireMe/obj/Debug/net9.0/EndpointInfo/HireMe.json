    "/Applications": {
      "post": {
        "tags": [
          "Applications"
        ],
        "summary": "Submits a new application to a job posting from a worker.",
        "description": "This endpoint allows workers to apply for job postings.\r\nThe worker ID is automatically extracted from the authenticated user's token.\r\nWorkers can only apply once to each job.\r\nJobs must be in Published status to accept applications.\r\nThe application includes a message from the worker to the employer.",
        "requestBody": {
          "description": "The application details including job ID and message.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddApplicationRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AddApplicationRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AddApplicationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Application submitted successfully."
          },
          "400": {
            "description": "Invalid request or business rule violation (e.g., JobNotFound, JobNotAcceptingApplications, AlreadyApplied)."
          },
          "401": {
            "description": "User is not authenticated."
          },
          "403": {
            "description": "User is not authorized (not a worker)."
          }
        }
      }
    },
    "/Applications/{applicationId}": {
      "put": {
        "tags": [
          "Applications"
        ],
        "summary": "Updates an existing application message.",
        "description": "Only the worker who submitted the application can update it.\r\nThe application must be in Applied status (not yet processed by employer).\r\nCannot update applications that have been accepted, rejected, or withdrawn.",
        "parameters": [
          {
            "name": "applicationId",
            "in": "path",
            "description": "The ID of the application to update.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "description": "The updated application message.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateApplicationRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateApplicationRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateApplicationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "204": {
            "description": "Application updated successfully."
          },
          "400": {
            "description": "Invalid request or business rule violation (e.g., ApplicationNotFound, UnauthorizedApplicationUpdate, CannotUpdateApplication)."
          },
          "401": {
            "description": "User is not authenticated."
          },
          "403": {
            "description": "User is not authorized (not a worker)."
          }
        }
      }
    },
    "/Applications/{applicationId}/accept": {
      "patch": {
        "tags": [
          "Applications"
        ],
        "summary": "Accepts a worker's application and creates a job connection.",
        "description": "Only the employer who owns the job can accept applications.\r\nThe application must be in Applied status.\r\nCreates a JobConnection with 10-day interaction period.\r\nAutomatically rejects other applications for the same job.\r\nUpdates the job status to InProgress.\r\nWorker cannot have another active job connection.",
        "parameters": [
          {
            "name": "applicationId",
            "in": "path",
            "description": "The ID of the application to accept.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "204": {
            "description": "Application accepted successfully and job connection created."
          },
          "400": {
            "description": "Invalid request or business rule violation (e.g., ApplicationNotFound, JobNotOwnedByEmployer, JobNotAcceptingApplications, InvalidApplicationStatus, WorkerHasActiveConnection)."
          },
          "401": {
            "description": "User is not authenticated."
          },
          "403": {
            "description": "User is not authorized (not an employer)."
          }
        }
      }
    },
    "/Applications/{applicationId}/reject": {
      "patch": {
        "tags": [
          "Applications"
        ],
        "summary": "Rejects a worker's application.",
        "description": "Only the employer who owns the job can reject applications.\r\nThe application must be in Applied status.\r\nOnce rejected, the application cannot be updated by the worker.",
        "parameters": [
          {
            "name": "applicationId",
            "in": "path",
            "description": "The ID of the application to reject.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "204": {
            "description": "Application rejected successfully."
          },
          "400": {
            "description": "Invalid request or business rule violation (e.g., ApplicationNotFound, InvalidApplicationStatus, JobNotOwnedByEmployer)."
          },
          "401": {
            "description": "User is not authenticated."
          },
          "403": {
            "description": "User is not authorized (not an employer)."
          }
        }
      }
    },
    "/Applications/{applicationId}/withdraw": {
      "patch": {
        "tags": [
          "Applications"
        ],
        "summary": "Withdraws a worker's application.",
        "description": "Only the worker who submitted the application can withdraw it.\r\nThe application must be in Applied status (not yet processed by employer).\r\nCannot withdraw applications that have been accepted or rejected.\r\nOnce withdrawn, the application cannot be reactivated.",
        "parameters": [
          {
            "name": "applicationId",
            "in": "path",
            "description": "The ID of the application to withdraw.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "204": {
            "description": "Application withdrawn successfully."
          },
          "400": {
            "description": "Invalid request or business rule violation (e.g., ApplicationNotFound, UnauthorizedApplicationUpdate, CannotUpdateApplication)."
          },
          "401": {
            "description": "User is not authenticated."
          },
          "403": {
            "description": "User is not authorized (not a worker)."
          }
        }
      }
    },
    "/Applications/job/{jobId}/applied": {
      "get": {
        "tags": [
          "Applications"
        ],
        "summary": "Retrieves all applied applications for a specific job.",
        "description": "Only the employer who owns the job can view applications.\r\nReturns only applications with Applied status (pending employer response).\r\nEach application includes worker details (full name, profile image) and application information (message, created date, update status).\r\nApplications with Withdrawn, Rejected, Accepted, or other statuses are not included.",
        "parameters": [
          {
            "name": "jobId",
            "in": "path",
            "description": "The ID of the job to get applications for.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Applications retrieved successfully with worker information."
          },
          "400": {
            "description": "Invalid request or business rule violation (e.g., JobNotFound, JobNotOwnedByEmployer)."
          },
          "401": {
            "description": "User is not authenticated."
          },
          "403": {
            "description": "User is not authorized (not an employer)."
          }
        }
      }
    },
